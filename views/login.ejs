
<%- include('partials/header.ejs') %>

<div class="container mb-4">
    <div class="row mt-5">
        <div class="col-md-6 m-auto">
            <div class="card card-body">
                <%- include('partials/message.ejs') %>
                <form action="/user/login" method="post">
                    <h2 class="text-center " style="display: flex; align-items: center; justify-content: center; padding: 2px; "><svg style="margin-right: 5px;"  xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="currentColor" class="bi bi-box-arrow-in-right" viewBox="0 0 16 16">
                            <path fill-rule="evenodd" d="M6 3.5a.5.5 0 0 1 .5-.5h8a.5.5 0 0 1 .5.5v9a.5.5 0 0 1-.5.5h-8a.5.5 0 0 1-.5-.5v-2a.5.5 0 0 0-1 0v2A1.5 1.5 0 0 0 6.5 14h8a1.5 1.5 0 0 0 1.5-1.5v-9A1.5 1.5 0 0 0 14.5 2h-8A1.5 1.5 0 0 0 5 3.5v2a.5.5 0 0 0 1 0v-2z"/>
                            <path fill-rule="evenodd" d="M11.854 8.354a.5.5 0 0 0 0-.708l-3-3a.5.5 0 1 0-.708.708L10.293 7.5H1.5a.5.5 0 0 0 0 1h8.793l-2.147 2.146a.5.5 0 0 0 .708.708l3-3z"/>
                          </svg> Log in  </h2>
                    
                    <div class="form-group m-2">
                        <label for="email">Email</label>
                        <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email"
                            value="<%=typeof email !== 'undefined' ? email :''%> " >
    
                    </div>
                    
                    <div class="form-group m-2">
                        <label for="password">Password</label>
                        <input type="password" id="password" name="password" class="form-control"
                        value="<%= typeof password !== 'undefined' ? password : ''%>" >
    
                    </div>
                    <div class="form-group m-2 text-center ">
                    <button type="submit" class="btn btn-primary  mb-2  " style="width: 100% ;">Log in</button>
                    </div>
                </form>
                <p class="lead mt-4">No Account ? <a href="/user/register">  <b>Register</b></a></p>
            </div>
        </div>
    </div>
    </div>

    <%- include('partials/footer.ejs'); %>

