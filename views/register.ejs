            <div class="card card-body">
                <%- include('partials/message.ejs') %>
                <form action="/user/register" method="post">
                  
                        
                    <h2 class="text-center " style="display: flex; align-items: center; justify-content: center; padding: 2px; "><svg style="margin-right: 5px;" xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="currentColor" class="bi bi-person-plus-fill" viewBox="0 0 16 16">
